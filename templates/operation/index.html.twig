{% extends 'layout.html.twig' %}

{% block title %}Opérations Hebdomadaires{% endblock %}

{% block body %}
    <!-- affichage du calendrier date range ou sélecteur de semaine -->
    <form method="post" class="sticky top-16 lg:top-0 bg-white" style="z-index: 9 !important;">
        <h1 class="font-bold">
            Opérations Hebdomadaires
        </h1>
        <input value="{{ week }}" type="week" id="week" name="week" class="focus:outline-none block w-full rounded-md border border-gray-200 dark:border-gray-600 bg-transparent p-2 text-gray-600 transition duration-300 invalid:ring-2 invalid:ring-red-400 focus:ring-2 focus:ring-cyan-300" />
    </form>
    <!-- affichage des opérations de la semaine sélectionnée -->
    {% set total = 0 %}
    {% set fraisRecup = 2000 %}
    {% set totalFraisRecup = 0 %}
    {% for d in dates %}
        {% set filteredSales = sales|filter(sale => sale.soldOn|date('Y-m-d') == d) %}
        <div class="flex pt-2">
            <div class="flex-none w-auto">
                <div class="relative inline-block border bg-white rounded w-16">
                    <div class="p-1 bg-gray-600 text-center text-white text-xs rounded-t font-bold">
                        {{ ('month.' ~ d|date('F')|lower)|trans({}, 'messages', 'fr') }}
                    </div>
                    <div class="p-1 text-center text-2xl font-bold leading-none py-0">
                        {{ d|date('d') }}
                    </div>
                    <div class="px-1 pt-0 pb-1 text-xs text-center">
                        {{ ('day.' ~ d|date('l')|lower)|trans({}, 'messages', 'fr') }}
                    </div>
                </div>
            </div>
            <div class="grow ps-2">
                <p class="font-bold">{{ filteredSales|length }} vente{{ (filteredSales|length > 1)?"s":"" }} enregistrée{{ (filteredSales|length > 1)?"s":"" }}</p>
                <ul role="list" class="divide-y divide-gray-100">
                {% set subTotal = 0 %}
                {% if filteredSales|length == 1 %}
                    {% set totalFraisRecup = totalFraisRecup + 1 %}
                {% endif %}
                {% for sale in filteredSales %}
                    <li class="gap-x-6 py-5 px-2 text-sm">
                        {% set amount = (sale.item.sellPrice - sale.promo) * (sale.qty - sale.qtyReturned) %}
                        {% set subTotal = subTotal + amount %}
                        {% set total = total + amount %}
                        <div class="flex justify-between">
                            <p>{{ sale.item.label }}</p>
                            <p class="text-nowrap">{{ amount|number_format(0, ',', ' ') }}</p>
                        </div>
                        <div class="flex justify-between">
                            <p>Qté: <span class="font-bold">{{ sale.qty }}</span></p>
                            <p>
                                <input type="hidden" class="saleId" value="{{ sale.id }}" />
                                Retour:
                                <input
                                        class="text-center border border-gray-200 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-cyan-300 transition duration-300 returnedQty"
                                        {{ (sale.qtyReturned > sale.qty)?'disabled="disabled"':"" }}
                                        {{ (sale.qtyReturned > sale.qty)?'readonly="readonly"':"" }}
                                        type="number"
                                        min="0"
                                        max="{{ sale.qty }}"
                                        value="{{ sale.qtyReturned }}"
                                />
                                <button class="backToStock align-middle -mt-1" {{ (sale.qtyReturned > sale.qty)?'disabled="disabled"':"" }} data-path="{{ path('app_sale_edit_qty_returned', {id: sale.id}) }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 {{ (sale.qtyReturned > sale.qty)?'text-gray-300 disabled':"" }}">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                                    </svg>
                                </button>
                                <svg class="animate-spin h-4 w-4 text-blue-800 hidden inline-block waiting" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                            </p>
                        </div>
                    </li>
                {% else %}
                    <li class="flex justify-between gap-x-6 py-5 px-2 text-sm">
                        <p>Aucune opération</p>
                    </li>
                {% endfor %}
                    <li class="flex justify-between gap-x-6 p-2 text-sm text-base font-medium text-gray-400 bg-slate-200">
                        <p>Sous-total</p>
                        <p>{{ subTotal|number_format(0, ',', ' ') }}</p>
                    </li>
                </ul>
            </div>
        </div>
    {% endfor %}
    <div class="mt-2 px-2 text-base font-medium text-gray-900 sticky start-0 bottom-0 w-full bg-gray-800 text-white py-2">
        <div class="flex justify-between">
            <p>Total des ventes</p>
            <p>{{ total|number_format(0, ',', ' ') }}</p>
        </div>
        <div class="flex justify-between">
            <p>Frais de récupération</p>
            <p>- {{ (fraisRecup * totalFraisRecup)|number_format(0, ',', ' ') }}</p>
        </div>
        <div class="flex justify-between">
            <p>Versement à récupérer</p>
            <p>{{ (total - (fraisRecup * totalFraisRecup))|number_format(0, ',', ' ') }}</p>
        </div>
    </div>
    <!-- zone de saisie du montant versement de livraison -->
{% endblock %}
