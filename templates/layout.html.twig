        <div class="bg-gray-100 dark:bg-gray-900">
            <aside
                    class="fixed top-0 z-10 ml-[-100%] flex h-screen w-full flex-col justify-between border-r bg-white px-6 pb-3 transition duration-300 md:w-4/12 lg:ml-0 lg:w-[25%] xl:w-[20%] 2xl:w-[15%] dark:bg-gray-800 dark:border-gray-700"
            >
                <div>
                    <div class="-mx-6 px-6 py-4">
                        <a href="{{ path('app_dashboard') }}" title="home" class="flex gap-x-2.5 text-sm font-semibold leading-6 text-slate-900 dark:text-slate-200">
                            <img src="{{ asset('images/logo.jpg') }}" alt="duo logo" />
                        </a>
                    </div>

                    <div class="text-center">
                        <h5 class="hidden text-xs font-bold text-gray-600 lg:block dark:text-gray-300">
                            {{ app.user.email|split('@')[0] }}
                        </h5>
                        <span class="hidden font-bold text-gray-400 lg:block">Admin</span>
                    </div>

                    {% set menu1Class = 'group flex items-center space-x-4 rounded-md px-4 py-3 text-gray-600 dark:text-gray-300' %}
                    {% set menu2Class = 'group flex items-center space-x-4 rounded-md px-4 py-3 text-gray-600 dark:text-gray-300' %}
