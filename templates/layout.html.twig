                        {% set menu5Class = 'relative flex items-center space-x-4 rounded-xl bg-gradient-to-r from-sky-600 to-cyan-400 px-4 py-3 text-white' %}
                        {% set title = 'DUO - ADV - Vente' %}
                    {% endif %}
                    {% if app.request.attributes.get("_route") starts with 'app_bank' %}
                        {% set menu6Class = 'relative flex items-center space-x-4 rounded-xl bg-gradient-to-r from-sky-600 to-cyan-400 px-4 py-3 text-white' %}
                        {% set title = 'DUO - ADV - Banque' %}
