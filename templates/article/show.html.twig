{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ article.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>PurchasePrice</th>
                <td>{{ article.purchasePrice }}</td>
            </tr>
            <tr>
                <th>SellPrice</th>
                <td>{{ article.sellPrice }}</td>
            </tr>
            <tr>
                <th>MinStock</th>
                <td>{{ article.minStock }}</td>
            </tr>
            <tr>
                <th>InStock</th>
                <td>{{ article.inStock }}</td>
